@{
    ViewData["Title"] = "SignIn";
}

<div class="d-flex justify-content-center">
  <form method="post" asp-controller="Auth" asp-action="SignIn" class="d-flex flex-column text-center border rounded form-outline w-50 bg-secondary p-3">
    <div>
        <h1>Войти</h1>
        <label>Логин</label>
        <input type="text" class="form-control" placeholder="Введите логин"/>
        <label class="form-label">Пароль</label>
        <input type="text" class="form-control" placeholder="Введите пароль"/>
        <input type="submit" value="Войти" class="submit-button border rounded w-75">
    </div>
    <a class="text-decoration-none register-btn border rounded w-75 align-center " href="/auth/register">Регистрация</a>
  </form>
</div>