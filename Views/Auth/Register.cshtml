@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center">
  <form method="post" asp-controller="Auth" asp-action="Register" class="d-flex flex-column text-center border rounded form-outline w-50 bg-secondary p-3">
    <h1>Регистрация</h1>

    <label>Логин</label>
    <input type="text" id="form12" class="form-control" placeholder="Введите логин" />

    <label class="form-label" for="form12">Пароль</label>
    <input type="text" id="form12" class="form-control" placeholder="Введите пароль"/>

    <label class="form-label" for="form12">Подтвердите пароль</label>
    <input type="text" id="form12" class="form-control" placeholder="Введите пароль ещё раз"/>

    <input type="submit" value="Войти" class="submit-button">
  </form>
</div>
