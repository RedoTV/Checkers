@{
    ViewData["Title"] = "Добавить лобби";
}

<form action="~/Lobby/LobbyPage" class="d-flex container flex-column text-center border rounded form-outline bg-secondary p-3 sign-in" method="post">
    <h3>Добавление лобби</h3>
    <div class="form-group">
        <label for="name"><h6>Название лобби</h6></label>
        <input type="text" class="form-control" name="name" id="name" placeholder="Название">
    </div>
    <div class="form-group">
        <label for="password"><h6>Пароль<span style="color: bisque;">* (по желанию)</span></h6></label>
        <input type="text" class="form-control" name="password" id="password" placeholder="Пароль">
    </div>
    <input type="submit" class="submit-button btn btn-primary" value="Добавить">
</form>