<!DOCTYPE html>
<html lang="en" class="bg-dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Checkers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body class="bg-dark d-flex flex-column min-vh-100 container-xl">
    <header>
        <nav class="navbar navbar-toggleable-sm mb-3">
            <a href="/" class="logo display-2 nav-font text-decoration-none"><span>Checkers</span></a>
            @if (User.Identity!.IsAuthenticated == true)
            {
                <a href="/Auth/UserInfo" class="text-decoration-none">
                    <h1 class="bg-dark">
                        <i class="bi bi-person-circle">
                            @User.Identity.Name
                        </i>
                    </h1>
                </a>
            }
            else{
                <a href="/Auth/logIn" class="text-decoration-none"><h1 class="bg-dark"><i class="bi bi-person-circle"> Гость</i></h1></a>
            }
        </nav>
    </header>

    <main class="text-light">
        @RenderBody()
    </main>

    <footer class="text-muted mt-auto p-t-4">
        <div class="container">
            <h6>2022-2023</h6>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
