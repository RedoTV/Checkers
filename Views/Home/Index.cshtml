@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Lobby>;

<h3 class="text-center">Лобби</h3>
<div class="container-fluid w-75 d-flex flex-wrap lobby-container">
    @if (Model.Count() > 0)
    {   
        <div class="lobby border border-3 border-success rounded ">
            <div class="lobby-center">
                @foreach (Lobby lobby in Model.ToArray())
                {
                    <h3 class="text-warning text-center">@lobby.Name</h3>
                    <div>
                        @if(lobby.Started == true){<h3 class="text-success text-center">Лобби запущено</h3>}
                        else{
                                <h3 class="text-danger text-center">Лобби не запущено</h3>
                                <i class="bi bi-hourglass-split wait-icon"></i>
                            }
                    </div>
                    <div class="text-center">
                        <a href="/home/lobby/@lobby.Id" class="btn btn-success ">Присоединиться</a>
                    </div>
                }
            </div>
        </div>
        
        <a class="add-lobby-container text-center border border-primary border-3 rounded " href="/lobby/addloby">
            <i class="bi bi-plus-circle add-lobby-icon text-align-center "></i>
            <h1>Добавить лобби</h1>
        </a>
    }
    else
    {
        <a class="add-lobby-container text-center border border-primary border-3 rounded " href="/lobby/addloby">
            <i class="bi bi-plus-circle add-lobby-icon text-align-center"></i>
            <h1>Добавить лобби</h1>
        </a>
    }
</div>